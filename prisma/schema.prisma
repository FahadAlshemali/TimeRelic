// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String            @id
  email        String            @unique
  userName     String            @unique
  password     String
  createdAt    DateTime          @default(now()) @db.Timestamp(6)
 
}

model Choice{
  id            String
  choice_text   String
}

model User_choices{
  id            String
  userId        String
  choiceId      String
}

model Situation{
  id           String
  story_text   String 
}

model Situation_Choice
  id           String
  situationId  String
  choiceId     String
  outcome      Boolean



